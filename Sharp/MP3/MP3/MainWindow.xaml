<Window x:Class="MP3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MP3"
        mc:Ignorable="d"
        Title="MP3" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- 4.1.5. Секция Storyboard для зажжения кнопки (становится непрозрачной) -->
        <Storyboard x:Key="ButtonFadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        <!-- 4.1.5. Секция Storyboard для затухания кнопки (становится прозрачной) -->
        <Storyboard x:Key="ButtonFadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.5" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- 4.1.6. Стиль для мультимедийной кнопки -->
        <Style x:Key="MultimediaButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Наружная граница белого цвета -->
                            <Border CornerRadius="5" BorderBrush="White" BorderThickness="2">
                                <!-- Внутренняя граница черного цвета и подсветка кнопки -->
                                <Border CornerRadius="5" BorderBrush="Black" BorderThickness="1" x:Name="InnerBorder">
                                    <!-- Радиальный градиент со смещением и блик -->
                                    <Border.Background>
                                        <RadialGradientBrush Center="0.3,0.3" GradientOrigin="0.3,0.3" RadiusX="0.7" RadiusY="0.7">
                                            <GradientStop Color="#FFBDBDBD" Offset="0"/>
                                            <GradientStop Color="#FF3A3A3A" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                            </Border>
                            <!-- Блик (glow/highlight element) -->
                            <Rectangle x:Name="GlowRect" Opacity="0" RadiusX="5" RadiusY="5">
                                <Rectangle.Fill>
                                    <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                        <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- 4.1.7. Триггеры, описывающие реакцию на события -->
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard Storyboard="{StaticResource ButtonFadeIn}"/>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard Storyboard="{StaticResource ButtonFadeOut}"/>
                            </EventTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="InnerBorder" Property="Background">
                                    <Setter.Value>
                                        <RadialGradientBrush Center="0.7,0.7" GradientOrigin="0.7,0.7" RadiusX="0.7" RadiusY="0.7">
                                            <GradientStop Color="#FF3A3A3A" Offset="0"/>
                                            <GradientStop Color="#FFBDBDBD" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="GlowRect" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="0.5"/>
            <!-- Начальная прозрачность для эффекта затухания -->
        </Style>
    </Window.Resources>
    <Grid>
        <!-- 4.1.8. Экземпляр кнопки посередине окна -->
        <Button x:Name="Btn1" Style="{StaticResource MultimediaButtonStyle}"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="0,0,0,70"
                Width="150" Height="50" Content="Click Me!"/>
        <Button x:Name="BtnClose" Style="{StaticResource MultimediaButtonStyle}" Content="Close Window"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="0,70,0,0"
                Width="150" Height="50" Click="BtnClose_Click"/>
    </Grid>
</Window>