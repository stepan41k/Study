<Page x:Class="MP11.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MP11.Pages"
      xmlns:wf="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Статистика"
      Background="{StaticResource PrimaryBackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 4.4. Панель настроек -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <!-- Выбор студента -->
            <TextBlock Text="Студент:" Width="100" VerticalAlignment="Center" TextAlignment="Right" Foreground="White" Margin="5"/>
            <ComboBox x:Name="ComboUsers" Width="200" Margin="5"
                      DisplayMemberPath="LastName" 
                      SelectionChanged="UpdateChart"/>

            <!-- Выбор типа диаграммы -->
            <TextBlock Text="Тип диаграммы:" Width="120" VerticalAlignment="Center" TextAlignment="Right" Foreground="White" Margin="5"/>
            <ComboBox x:Name="ComboChartTypes" Width="175" Margin="5"
                      SelectionChanged="UpdateChart"/>
        </StackPanel>

        <!-- 4.7. Область построения (WindowsFormsHost) -->
        <wf:WindowsFormsHost Grid.Row="1" Margin="10">
            <charts:Chart x:Name="ChartTasks">
                <!-- Обязательно добавляем область построения и легенду -->
                <charts:Chart.ChartAreas>
                    <charts:ChartArea Name="MainChartArea"/>
                </charts:Chart.ChartAreas>
                <charts:Chart.Legends>
                    <charts:Legend Name="MainLegend"/>
                </charts:Chart.Legends>
            </charts:Chart>
        </wf:WindowsFormsHost>
    </Grid>
</Page>