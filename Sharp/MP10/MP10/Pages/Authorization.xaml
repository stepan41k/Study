<Page x:Class="MP11.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MP11.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="220" d:DesignWidth="500"
      Title="Авторизация">

    <Grid>
        <Viewbox Margin="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Авторизация" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>

                <Label Content="Имя пользователя:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" MinWidth="150" Margin="5"/>

                <Label Content="Пароль:" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" MinWidth="150" Margin="5"/>

                <Button x:Name="BtnAuthorization" Content="Войти" Grid.Row="3" Margin="0 5 0 0" Padding="6 0" Click="BtnAuthorization_Click" HorizontalAlignment="Center"/>
                <Button x:Name="BtnGoToRegistration" Content="Регистрация" Grid.Row="3" Grid.Column="1" Margin="0 5 0 0" Padding="6 0" Click="BtnGoToRegistration_Click" HorizontalAlignment="Center"/>
            </Grid>
        </Viewbox>
    </Grid>
</Page>