<Window x:Class="MP11.MainWindow" Background="{StaticResource PrimaryBackgroundColor}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление студентами" Height="450" Width="800">
        

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="StudentsDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding Group}"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель с кнопками -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Поиск и фильтрация" Margin="5" Padding="10,5" Click="OpenSearch_Click" Background="#5A8B7D"/>
            <Button Content="Добавить студента" Margin="5" Padding="10,5" Click="AddStudent_Click"/>
            <Button Content="Редактировать выбранного" Margin="5" Padding="10,5" Click="EditStudent_Click"/>
            <Button Content="Удалить студента" Margin="5" Padding="10,5" Click="DeleteStudent_Click"/>
            <Button Content="Статистика" Margin="5" Padding="10,5" Click="OpenChart_Click" Background="#5A8B7D"/>
        </StackPanel>
    </Grid>
</Window>